<div  data-aos="fade-right" class="section5 d-flex flex-md-row flex-column justify-content-center align-items-center">
  <div class="w-100 w-md-50 d-flex justify-content-center justify-content-md-end">
    <div class="me-3 me-md-5">
      <h1>{{ section.settings.heading }}</h1>
      <h2>{{ section.settings.subtitle }}</h2>
      <ul>
        <li>{{ section.settings.list1 }}</li>
        <li>{{ section.settings.list2 }}</li>
        <li>{{ section.settings.list3 }}</li>
        <li>{{ section.settings.list4 }}</li>
        <li>{{ section.settings.list5 }}</li>
        <li>{{ section.settings.list6 }}</li>
        <li>{{ section.settings.list7 }}</li>
      </ul>
      <a href="/pages/suscribete">
      	<button class="an1Btn">{{ section.settings.btn_text }}</button>
      </a>
    </div>
  </div>
  <div class="w-100 w-md-50 m-lg-5 p-lg-5 text-center">
    
    {%- if section.settings.video != blank -%}
    <img src="{{ section.settings.video | image_url}}" class="s5_gif" autoplay="true" autoplay loop="loop" muted defaultMuted playsinline data-wf-ignore="true" data-object-fit="cover" preload="auto">
    <!--
    <video src="" class="s5_gif" autoplay="true" autoplay loop="loop" muted defaultMuted playsinline data-wf-ignore="true" data-object-fit="cover" preload="auto"></video>
    -->
    {% else %}
    <img src="https://cdn.shopify.com/s/files/1/0639/0264/6525/files/crudog_gif_food.gif?v=1651602023" class="s5_gif" autoplay="true" autoplay loop="loop" muted defaultMuted playsinline data-wf-ignore="true" data-object-fit="cover" preload="auto">
   	<!--
    <video src="assets/img/crudog_gif_food.mp4" class="s5_gif" autoplay="true" autoplay loop="loop" muted defaultMuted playsinline data-wf-ignore="true" data-object-fit="cover" preload="auto"></video>
  	-->
	{%- endif -%}
    
  </div>
</div>

