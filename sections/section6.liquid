<div class="section6" data-aos="fade-down-right">
  <div class="d-flex flex-md-row flex-column justify-content-center align-items-center text-center s6_cont">
    <div>
      
      {%- if section.settings.image_banner != blank -%}
      <img src="{{ section.settings.image_banner | image_url}}" class="w-100">
      {% else %}
      <img src="https://cdn.shopify.com/s/files/1/0639/0264/6525/files/s6_img.png?v=1651267479" class="w-100">
      {%- endif -%}
      
    </div>
    <div class="p-4">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <p>
       	{{ section.settings.text }} 
      </p>
      <a href="/pages/contact">
        <button class="an1Btn">
         {{ section.settings.btn_text }}
        </button>
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "section6",
  "settings": [
{
	"type": "image_picker",
	"id": "image_banner",
	"label": "Imagen banner"
},
{
	"type": "text",
	"id": "heading",
	"label": "Cabecera",
	"default": "Lo llevamos en <br> minutos a tu casa"
},
{
	"type": "text",
	"id": "text",
	"label": "Descripción",
	"default": "Contamos con camionetas por<br> toda la ciudad para poder estar <br>lo antes posible a tu dirección. <br>Contáctanos a través de <br>Whatsapp para llevar tu plan."
},
{
	"type": "text",
	"id": "btn_text",
	"label": "Texto del botón",
	"default": "Contacto"
}
],
  "presets": [
    {
      "name": "section6",
      "category": "Custom"
    }
  ]
}
{% endschema %}